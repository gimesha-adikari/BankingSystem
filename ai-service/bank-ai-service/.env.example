# App feature flags (KYC is the only implemented feature)
APP_ENABLE_FEATURE_KYC=true
APP_ENABLE_FEATURE_CHATBOT=false
APP_ENABLE_FEATURE_LOANS=false

# Thresholds (defaults shown; override if you like)
APP_FACE_THRESHOLD=0.85
APP_LIVE_THRESHOLD=0.80
APP_OCR_THRESHOLD=0.80
APP_DOC_THRESHOLD=0.80

# Portrait extraction behavior
APP_DOC_PORTRAIT_MODE=auto
APP_PORTRAIT_BACKEND=simple
APP_PORTRAIT_MIN_SIZE=64
APP_PORTRAIT_MARGIN=0.20

# Calibration logging (off by default)
APP_CALIBRATION_LOG=false
# APP_INSTANCE_ID=dev-a

# Tesseract (conda tesseract sets this automatically; keep if you like)
TESSDATA_PREFIX=${CONDA_PREFIX}/share/tessdata
